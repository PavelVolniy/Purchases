<body>
<div>
    List of users
</div>
            <table>
                {{#userList}}
                <tr><th class="id"><b >id- </b> <f>{{id}}</f></th>
                    <th class="name"><b >name - </b> <f>{{username}}</f></th>
                    <th class="password"><b >password - </b> <f>{{password}}</f></th>
                    <th class="role"><b >role - </b><f>{{roles}}</f></th>
                    <th class="active"><b >active - </b> <f>{{active}}</f></th>
                    <td><a href="/user/{{id}}">edit</a></td>
                </tr>
                {{/userList}}        
            </table>
            <br>
<form action="/user/del" method="post" style="text-align: center;">
    <input type="hidden" name="_csrf" value="{{_csrf.token}}">
    <div><label>username: <input type="text" name="username"></label></div>
    <div><input style="margin-top: 5px;" type="submit" value="Delete user"></div>
    <br> <a href="main">Main page</a>
